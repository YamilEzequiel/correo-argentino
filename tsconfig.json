{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs", 
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}